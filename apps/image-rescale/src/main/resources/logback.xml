<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>
    <springProperty scope="context" name="springAppVersion" source="spring.application.version"/>
    <property name="APP_NAME" value="image-rescale"/>

    <!-- console appender -->
    <appender name="HUMAN-READABLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                %boldYellow(%d{yyyy/MM/dd HH:mm:ss.SSS}) %magenta([${APP_NAME}]) %highlight(%-5level)- %msg%n
            </pattern>
        </layout>
    </appender>

    <root level="INFO">
        <appender-ref ref="HUMAN-READABLE"/>
    </root>

    <logger name="com.newsnow" additivity="false" level="ALL">
        <appender-ref ref="HUMAN-READABLE"/>
    </logger>

</configuration>
